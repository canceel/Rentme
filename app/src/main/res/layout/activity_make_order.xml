<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/grey">

    <RelativeLayout
        style="@style/TitleStyle"
        android:layout_alignParentTop="true"
        android:background="@color/msg_title_background">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:padding="12dp"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="8dp"
            android:text="生成订单"
            android:textColor="@color/msg_title_text_color"
            android:textSize="@dimen/text_size_18sp"/>


    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/publish_bg"/>

            <FrameLayout
                android:id="@+id/first_fl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    >

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="96dp"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="4dp"
                        android:drawableRight="@mipmap/sex_girl"
                        android:text="杨颖"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_size_16sp"/>

                    <TextView
                        android:id="@+id/constellation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/name"
                        android:layout_below="@+id/name"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="4dp"
                        android:text="双鱼座"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/text_size_14sp"/>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@+id/constellation"
                        android:text="福建福州"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/text_size_14sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="2dp"
                    android:background="@mipmap/fee_bg"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/fee_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:padding="2dp"
                        android:paddingLeft="10dp"
                        android:text="￥300"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_size_15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="2dp"
                        android:padding="2dp"
                        android:text="/时"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_size_12sp"/>
                </LinearLayout>
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_fl"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/rc_divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:gravity="left|center_vertical"
                        android:text="预约日期"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/text_size_14sp"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"/>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/icon_row"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_size_15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/rc_divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:gravity="left|center_vertical"
                        android:text="预约时间"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/text_size_14sp"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/icon_row"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_size_15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/rc_divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:gravity="left|center_vertical"
                        android:text="预约时长"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/text_size_14sp"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"/>

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/icon_row"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_size_15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/rc_divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:gravity="left|center_vertical"
                        android:text="电话号码"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/text_size_14sp"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"/>

                    <TextView
                        android:id="@+id/telphone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/text_size_15sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/rc_divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:gravity="left|center_vertical"
                        android:text="预约地点"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/text_size_14sp"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"/>

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="输入见面地址（建议公共场所）"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/text_size_15sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/rc_divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="11dp"
                        android:gravity="left|center_vertical"
                        android:text="金额"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/text_size_14sp"/>

                    <TextView
                        android:id="@+id/cost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="￥300"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_size_18sp"/>
                </LinearLayout>

            </LinearLayout>

            <com.android.youhu.widget.CircleImageView
                android:id="@+id/head_cv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_below="@+id/imageView"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-32dp"
                android:src="@mipmap/icon_defaultheader"/>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        style="@style/BottomStyle"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            >

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="2dp"
                android:text="总价"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_15sp"/>

            <TextView
                android:id="@+id/total_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/total"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/total"
                android:text="￥300"
                android:textColor="@color/text_red"
                android:textSize="@dimen/text_size_19sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical"
            >


            <Button
                android:id="@+id/dating"
                style="@style/ButtonRedStyle"
                android:layout_width="90dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="确定提交"
                android:textColor="@color/text_white_0"
                android:textSize="@dimen/text_size_15sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>